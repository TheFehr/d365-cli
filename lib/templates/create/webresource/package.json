{
  "version": "1.0.0",
  "name": "web-resources",
  "private": true,
  "scripts": {
    "prod": "webpack --env=prod --progress --colors --hide-modules",
    "dev": "webpack --env=dev --progress --colors --hide-modules",
    "test": "jest"
  },
  "devDependencies": {
  },
  "babel": {
    "presets": [
      [
          "@babel/preset-env",
          {
              "targets": {
                  "browsers": [
                      "last 2 versions",
                      "ie >= 11"
                  ]
              },
              "modules": false,
              "useBuiltIns": "usage"
          }
      ]
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
